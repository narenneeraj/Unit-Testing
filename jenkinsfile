pipeline {
agent any
  stages {
  
    stage('Build Image'){
      steps {
      sh '''
         sudo npm install
         sudo docker build -t node-hello .
         '''
      }

      post {
      always {
        junit(testResults: 'target/surefire-reports/*.xml', allowEmptyResults : true)
      }
    }  
    
    }
    stage('Test'){
      steps {
      sh 'npm run test'
      }
    }

  stage('Sonar'){
    steps {
    sh '''
    sonar-scanner \
    -Dsonar.projectKey=sonar-project \
    -Dsonar.sources=. \
    -Dsonar.host.url=http://3.106.127.237:9000 \
    -Dsonar.login=sqp_7b7f3a970ea6ef64b3eb47612028e2b9c7c6b961
      '''
    }
    }
    
    }
       
      }  
  

        stage('Deploy Container'){
      steps {
      sh '''
         sudo docker stop node-hello
         sudo docker rm node-hello
         sudo docker run -itd -p 3000:3000 --name node-hello node-hello
         '''
      }
    }
